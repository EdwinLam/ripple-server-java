<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.ripple.dao.mapper.UserRoleMapper">

    <select id="findByUserId" resultType="cn.ripple.entity.Role">
      SELECT r.id id, name
      FROM r_user_role ur
      LEFT JOIN r_role r
      ON ur.role_id = r.id
      WHERE user_Id = #{userId}
    </select>
</mapper>